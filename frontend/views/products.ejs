<%- include('layout/header') %>

<div class="container">
    <div class="row my-4 ">
        <div class="col-lg-12">
            <% if (message){%>
            <div class="alert alert-dismissable fade show alert-<%= message.type %>" role="alert">
                <strong><%= message.message %></strong>
                <button class="btn-close ml-5" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

            <div class="table-responsive">
                <% if (products !='') { %>
                    <table class="table table-striped text-center ">
                        <thead>
                            <tr class="table-success">
                              <th>ID</th>  
                              <th>Image</th>  
                              <th>Name</th>  
                              <th>Price</th>  
                              <th>Type</th> 
                              <th>Action</th>  
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><img src="/uploads/<%= row.image %>" width="50" class="image-thumbnail" alt="Product Image"></td>
                                    <td><%= row.name  %></td>
                                    <td>$<%= row.price ? row.price.toFixed(2) : 'N/A' %></td>                                    
                                    <td><%= row.type %></td>
                                    <td>
                                        <a href="editproduct/<%= row._id %>" class="text-primary"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="deleteproduct/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No product found in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
