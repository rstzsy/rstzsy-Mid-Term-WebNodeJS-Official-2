<%- include('layout/header') %>
<head><link rel="stylesheet" href="/style.css"></head>
<body>
    <% if (message) { %>
        <div class="alert alert-<%= message.type %> mt-4 text-center">
            <%= message.message %>
        </div>
    <% } %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Add New Product</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="addproduct" method="POST" id="add-product-form" enctype="multipart/form-data">
                            
                            <div class="mb-3">
                                <label for="name">Product Name</label>
                                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter product name" required />
                            </div>

                            
                            <div class="mb-3">
                                <label for="price">Price</label>
                                <input type="number" name="price" class="form-control form-control-lg" placeholder="Enter product price" required />
                            </div>

                          
                            <div class="mb-3">
                                <label for="type">Type</label>
                                <textarea name="type" class="form-control form-control-lg" rows="3" placeholder="Enter Type" required></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input type="file" name="image" class="form-control form-control-lg" required />
                            </div>

                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" class="btn btn-color btn-lg" value="Add Product" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<%- include('layout/footer') %>
