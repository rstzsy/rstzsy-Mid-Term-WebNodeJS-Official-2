<%- include('layout/header') %>

<div class="container">
    <div class="row my-4 ">
        <div class="col-lg-12">
            <% if (message){%>
            <div class="alert alert-dismissable fade show alert-<%= message.type %>" role="alert">
                <strong><%= message.message %></strong>
                <button class="btn-close ml-5" type="button" data-bs-dismiss="alert" aria-label="Close"></button>

            </div>
            <% } %>

            <div class="table-responsive">
                <% if (users !='') { %>
                    <table class="table table-striped text-center ">
                        <thead>
                            <tr class="table-success">
                              <th>ID</th>    
                              <th>Name</th>  
                              <th>E-Mail</th>
                              <th>PassWord</th>
                              <th>Action</th>  
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row,index) => { %>
                                <tr>
                                    <td><%= index %></td>
                                    <td><%= row.name  %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.password %></td>
                                    <td>
                                        <a href="/index/edit/<%= row._id %>" class="text-primary"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/index/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else{ %>
                        <h1 class="text-center text-secondary mt-5">No user found in the database</h1>
                    <% } %>
                
            </div>
            <!-- <h1>Welcome to Admin Page</h1> -->
        </div>
    </div>

<%- include('layout/footer') %>